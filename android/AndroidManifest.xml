<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.savinyurii.timetable"
    android:versionCode="2"
    android:versionName="0.01" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/lable_app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="ru.savinyurii.timetable.TimeTableActivity"
            android:label="@string/lable_app_name" >
            <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>
        
        <activity
            android:name="ru.savinyurii.timetable.HtmlWeekTimeTable"
            android:label="@string/lable_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity 
            android:name="ru.savinyurii.timetable.ChooseFacultyAndGroup"
            android:label="@string/lable_choosing"/>
        
        <activity android:label="SettingsActivity" android:name="ru.savinyurii.timetable.SettingsActivity">
             <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
        </activity>
        
    </application>

</manifest>
